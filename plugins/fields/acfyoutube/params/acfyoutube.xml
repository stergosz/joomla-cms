<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
			<field name="size" type="radio" 
		        label="ACF_VIDEO_SIZE"
				description="ACF_VIDEO_SIZE_DESC"
		        class="btn-group btn-group-yesno"
		        default="fixed">
		            <option value="fixed">ACF_FIXED</option>
		            <option value="responsive">ACF_RESPONSIVE</option>
		    </field>
			<field name="width" type="text"
				label="ACF_YOUTUBE_WIDTH"
				description="ACF_YOUTUBE_WIDTH_DESC"
				size="40"
				default="480"
				showon="size:fixed"
			/>
			<field name="height" type="text"
				label="ACF_YOUTUBE_HEIGHT"
				description="ACF_YOUTUBE_HEIGHT_DESC"
				default="270"
				showon="size:fixed"
			/>
			
			<field name="autoplay" type="nrtoggle" 
		        label="ACF_YOUTUBE_AUTOPLAY"
				description="ACF_YOUTUBE_AUTOPLAY_DESC"
			/>
		    <field name="cc_load_policy" type="nrtoggle" 
		        label="ACF_YOUTUBE_CC_LOAD_POLICY"
				description="ACF_YOUTUBE_CC_LOAD_POLICY_DESC"
			/>
		    <field name="color" type="list" 
		        label="ACF_YOUTUBE_COLOR"
				description="ACF_YOUTUBE_COLOR_DESC"
		        default="red">
		            <option value="red">ACF_YOUTUBE_COLOR_RED</option>
		            <option value="white">ACF_YOUTUBE_COLOR_WHITE</option>
		    </field>
		    <field name="controls" type="nrtoggle" 
		        label="ACF_YOUTUBE_CONTROLS"
				description="ACF_YOUTUBE_CONTROLS_DESC"
				checked="true"
			/>
		    <field name="disablekb" type="nrtoggle" 
		        label="ACF_YOUTUBE_DISABLEKB"
				description="ACF_YOUTUBE_DISABLEKB_DESC"
			/>
		    <field name="start" type="nrnumber" 
		        label="ACF_YOUTUBE_START"
				description="ACF_YOUTUBE_START_DESC"
		        addon="seconds"
                hint="0"
                class="input-small"
		        default="0"
		    />
		    <field name="end" type="nrnumber" 
		        label="ACF_YOUTUBE_END"
				description="ACF_YOUTUBE_END_DESC"
		        addon="seconds"
                hint="0"
                class="input-small"
		        default="0"
		    />
		    <field name="fs" type="nrtoggle" 
		        label="ACF_YOUTUBE_FS"
				description="ACF_YOUTUBE_FS_DESC"
				checked="true"
			/>
		    <field name="hl" type="language" 
		        label="ACF_YOUTUBE_HL"
				description="ACF_YOUTUBE_HL_DESC"
				client="site"
		        default="en-GB"
		    />
		    <field name="iv_load_policy" type="nrtoggle" 
		        label="ACF_YOUTUBE_IV_LOAD_POLICY"
				description="ACF_YOUTUBE_IV_LOAD_POLICY_DESC"
				checked="true"
			/>
		    <field name="loop" type="nrtoggle" 
		        label="ACF_YOUTUBE_LOOP"
				description="ACF_YOUTUBE_LOOP_DESC"
			/>
		    <field name="modestbranding" type="nrtoggle" 
		        label="ACF_YOUTUBE_MODESTBRANDING"
				description="ACF_YOUTUBE_MODESTBRANDING_DESC"
			/>
		    <field name="rel" type="nrtoggle" 
		        label="ACF_YOUTUBE_REL"
				description="ACF_YOUTUBE_REL_DESC"
				checked="true"
			/>
		    <field name="showinfo" type="nrtoggle" 
		        label="ACF_YOUTUBE_SHOWINFO"
				description="ACF_YOUTUBE_SHOWINFO_DESC"
				checked="true"
			/>
		    
		    
		</fieldset>
	</fields>
</form>
