<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
            <field type="spacer" name="label"
				label="NR_FRONTEND"
				class="acf"
			/>
			<field name="width" type="text"
				label="ACF_OSM_WIDTH"
				description="ACF_OSM_WIDTH_DESC"
				default="400px"
			/>
			<field name="height" type="text"
				label="ACF_OSM_HEIGHT"
				description="ACF_OSM_HEIGHT_DESC"
				default="350px"
			/>
			<field name="zoom" type="nrnumber"
				label="ACF_OSM_ZOOM"
				description="ACF_OSM_ZOOM_DESC"
				default="4"
				min="0"
			/>
			
			<field name="marker_image" type="media"
				directory="acfosm"
				default="media/plg_fields_acfosm/img/marker.png"
				preview_width="32"
				label="ACF_OSM_MARKER_IMAGE"
				description="ACF_OSM_MARKER_IMAGE_DESC"
			/>
			<field name="show_tooltip" type="nrtoggle" 
				label="ACF_OSM_SHOW_TOOLTIP"
				description="ACF_OSM_SHOW_TOOLTIP_DESC"
			/>
			<field name="scale" type="list"
				label="ACF_OSM_SCALE"
				description="ACF_OSM_SCALE_DESC"
				default="0">
					<option value="0">JDISABLED</option>
					<option value="metric">ACF_OSM_SCALE_METRIC</option>
					<option value="imperial">ACF_OSM_SCALE_IMPERIAL</option>
			</field>
			
			
            <field type="spacer" name="label2"
				label="NR_BACKEND"
				class="acf"
			/>
			<field name="show_address_input" type="nrtoggle" 
				label="ACF_OSM_SHOW_ADDRESS"
				description="ACF_OSM_SHOW_ADDRESS_DESC"
				checked="true"
			/>
			<field name="default_coords" type="text"
				label="ACF_OSM_DEFAULT_COORDS"
				description="ACF_OSM_DEFAULT_COORDS_DESC"
				hint="36.891319,27.283480"
			/>
		</fieldset>
	</fields>
</form>

