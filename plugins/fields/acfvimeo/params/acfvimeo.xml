<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
			<field name="size" type="radio" 
		        label="ACF_VIDEO_SIZE"
				description="ACF_VIDEO_SIZE_DESC"
		        class="btn-group btn-group-yesno"
		        default="fixed">
		            <option value="fixed">ACF_FIXED</option>
		            <option value="responsive">ACF_RESPONSIVE</option>
		    </field>
			<field name="width" type="text"
				label="ACF_VIMEO_WIDTH"
				description="ACF_VIMEO_WIDTH_DESC"
				size="40"
				default="640"
				showon="size:fixed"
			/>
			<field name="height" type="text"
				label="ACF_VIMEO_HEIGHT"
				description="ACF_VIMEO_HEIGHT_DESC"
				default="360"
				showon="size:fixed"
			/>
			
			<field name="autoplay" type="nrtoggle" 
		        label="ACF_VIMEO_AUTOPLAY"
				description="ACF_VIMEO_AUTOPLAY_DESC"
			/>
		    <field name="loop" type="nrtoggle" 
		        label="ACF_VIMEO_LOOP"
				description="ACF_VIMEO_LOOP_DESC"
			/>
		    <field name="title" type="nrtoggle" 
		        label="ACF_VIMEO_TITLE"
				description="ACF_VIMEO_TITLE_DESC"
				checked="true"
			/>
			<field name="byline" type="nrtoggle" 
		        label="ACF_VIMEO_BYLINE"
				description="ACF_VIMEO_BYLINE_DESC"
				checked="true"
			/>
		    <field name="portrait" type="nrtoggle" 
		        label="ACF_VIMEO_PORTRAIT"
				description="ACF_VIMEO_PORTRAIT_DESC"
			/>
			<field name="color" type="nrcolor" 
                label="ACF_VIMEO_COLOR"
                description="ACF_VIMEO_COLOR_DESC"
                default="#00adef"
            />
            
            
		</fieldset>
	</fields>
</form>
